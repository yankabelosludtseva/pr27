<Page x:Class="пр_27.Pages.Poster"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:пр_27.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Poster">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Афиша кинотеатров" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="Blue"
                   Margin="0,0,0,20"/>

        <!-- Таблица афиши -->
        <DataGrid x:Name="dgPosters" 
                  Grid.Row="1" 
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Кинотеатр" Binding="{Binding CinemaName}" Width="150"/>
                <DataGridTextColumn Header="Название фильма" Binding="{Binding FilmName}" Width="200"/>
                <DataGridTextColumn Header="Дата и время" Binding="{Binding SessionTime}" Width="150"/>
                <DataGridTextColumn Header="Цена билета" Binding="{Binding TicketPrice}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnAdd" 
                    Content="Добавить" 
                    Width="100" Height="35" 
                    Margin="5"
                    Background="Green"
                    Foreground="White"
                    Click="btnAdd_Click"/>
            <Button x:Name="btnEdit" 
                    Content="Изменить" 
                    Width="100" Height="35" 
                    Margin="5"
                    Background="Gold"
                    Foreground="White"
                    Click="btnEdit_Click"/>
            <Button x:Name="btnDelete" 
                    Content="Удалить" 
                    Width="100" Height="35" 
                    Margin="5"
                    Background="Red"
                    Foreground="White"
                    Click="btnDelete_Click"/>
        </StackPanel>
    </Grid>
</Page>
